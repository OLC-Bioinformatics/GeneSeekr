#!/usr/bin/env python
from GeneSeekr import Jackson
__author__ = 'mike knowles'


def helper(genes, targets, out, cuttoff, threads, **kwargs):
    from glob import glob
    import os
    import json
    import time
    assert os.path.isdir(out), u'Output location is not a valid directory {0!r:s}'.format(out)
    assert os.path.isfile(genes), u'ARMI-genes.fa not valid {0!r:s}'.format(genes)
    assert isinstance(threads, int)
    ispath = (lambda x: glob(x + "/*.f*[sa]") if os.path.isdir(x) else [x])
    genes = ispath(genes)
    targets = ispath(targets)
    result = Jackson(genes, targets, threads)
    result.mpblast(cuttoff, **kwargs)
    json.dump(result.plus, open("%s/GeneSeekr_gene_results_%s.json" % (out, time.strftime("%Y.%m.%d.%H.%M.%S")), 'w'),
              sort_keys=True, indent=4, separators=(',', ': '))
    result.csvwriter(out, 'GeneSeekr')


if __name__ == '__main__':
    from argparse import ArgumentParser
    from GeneSeekr.MLSTSeekr import parent
    parser = ArgumentParser(description='General quick BLASTn formatter',
                            parents=[parent])
    parser.set_defaults(cutoff=70)
    args = parser.parse_args()
    helper(args.marker, args.input, args.output, args.cutoff, args.threads)
